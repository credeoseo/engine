<footer class="container pt-16 mx-auto">
	<div class="grid gap-10 row-gap-6 mb-8 lg:w-4/5 xl:w-3/5 lg:mx-auto">
		<div class="">
			<a href="/" aria-label="На главную" title="{{ envs.site.name }}" class="inline-flex items-center">
				<img class="object-contain h-20 lozad" src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==" data-src="{{ envs.site.logoUrl | url }}" Alt="{{ envs.site.name }}">
				{#<span class="ml-2 text-xl font-bold tracking-wide text-gray-800 uppercase">{{ envs.site.name }}</span>#}
			</a>
			<div class="mt-6 space-y-4 text-sm text-gray-800">
				{% markdown %}
					{% include "../../data/footer.md" %}
				{% endmarkdown %}
			</div>
		</div>
		<div class="space-y-2 text-sm">
			<p class="text-base font-bold tracking-wide text-gray-900">Контакты</p>
			<div class="flex">
				<p class="mr-1 text-gray-800">Телефон:</p>
				<a href="tel:{{ phone }}" aria-label="{{ phone }}" title="{{ phone }}" class="transition-colors duration-300 text-deep-purple-accent-400 hover:text-deep-purple-800">{{ phone }}</a>
			</div>
			<div class="flex">
				<p class="mr-1 text-gray-800">Email:</p>
				<a href="mailto:{{ envs.contacts.mail }}" aria-label="{{ envs.contacts.mail }}" title="{{ envs.contacts.mail }}" class="transition-colors duration-300 text-deep-purple-accent-400 hover:text-deep-purple-800">{{ envs.contacts.mail }}</a>
			</div>
			<div class="flex">
				{% if envs.contacts.addresses %}
					<p class="mr-1 text-gray-800">Адреса:</p>
					<div class="grid gap-y-2">
						{% for item in envs.contacts.addresses %}
							{% if item.mapLink %}
							<a href="{{ item.mapLink }}" target="_blank" rel="nofollow noopener noreferrer" aria-label="{{ item.address }}" title="{{ item.address }}" class="transition-colors duration-300 text-deep-purple-accent-400 hover:text-deep-purple-800">
								{{ item.address }}
							</a>
							{% else %}
							<span class="transition-colors duration-300 text-deep-purple-accent-400 hover:text-deep-purple-800">
								{{ item.address }}
							</span>
							{% endif %}
						{% endfor %}
					</div>
				{% else %}
					<p class="mr-1 text-gray-800">Адрес:</p>
					{% if mapLink %}
					<a href="{{ mapLink }}" target="_blank" rel="nofollow noopener noreferrer" aria-label="{{ address }}" title="{{ address }}" class="transition-colors duration-300 text-deep-purple-accent-400 hover:text-deep-purple-800">
						{{ address }}
					</a>
					{% else %}
					<span class="transition-colors duration-300 text-deep-purple-accent-400 hover:text-deep-purple-800">
						{{ address }}
					</span>
					{% endif %}
				{% endif %}
			</div>
		</div>
