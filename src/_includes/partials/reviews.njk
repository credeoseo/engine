{% if reviews|length %}
<section id="reviews" class="scroll-mt-10">
	<div class="container mx-auto">
		<div class="py-16 lg:py-20 lg:w-4/5 xl:w-3/5 lg:mx-auto">
			<div class="max-w-xl mb-10 md:mx-auto sm:text-center lg:max-w-2xl md:mb-12">
				<h2 class="max-w-lg mb-6 font-sans text-3xl font-bold leading-none tracking-tight text-gray-900 sm:text-4xl md:mx-auto">
					<span>Отзывы о нас</span>
				</h2>
				{#<p class="text-base text-gray-700 md:text-lg"></p>#}
			</div>
			<div class="grid gap-4 row-gap-5 sm:grid-cols-2 lg:grid-cols-3">
				{% for item in reviews %}
				<div class="grid grid-rows-[auto,1fr] justify-between p-5 border rounded shadow-sm">
					<div class="grid grid-rows-2 grid-cols-[auto,1fr] gap-4 mb-4">
						<div class="relative flex items-center justify-center w-16 h-16 row-span-2 overflow-hidden rounded-full bg-indigo-50">
							<img class="absolute inset-0 object-cover lozad" src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==" data-src="{{ item.img }}" alt="{{ item.name }}">
						</div>
						<h6 class="mb-2 font-semibold leading-5">{{ item.name }}</h6>
						<span>Отзыв с {{ item.platform }}</span>
					</div>
					<p class="mb-3 text-sm text-gray-900">
						{{ item.review }}
					</p>
				</div>
				{% endfor %}
			</div>
		</div>
	</div>
</section>
{% endif %}
